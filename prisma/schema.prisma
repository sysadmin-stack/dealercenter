generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ─── Enums ──────────────────────────────────────────────

enum Segment {
  HOT
  WARM
  COLD
  FROZEN
}

enum Language {
  EN
  PT
  ES
}

enum Channel {
  whatsapp
  email
  sms
}

enum TouchStatus {
  pending
  sent
  delivered
  opened
  clicked
  replied
  bounced
  failed
}

enum CampaignStatus {
  draft
  active
  paused
  completed
}

enum ConversationStatus {
  ai
  human
  closed
}

// ─── NextAuth Models ────────────────────────────────────

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("sales_rep")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ─── Business Models ────────────────────────────────────

model Lead {
  id             String    @id @default(uuid())
  name           String
  email          String?
  phone          String?
  phoneSecondary String?
  address        String?
  dob            DateTime?
  salesRep       String?
  source         String?
  originType     String?
  status         String?
  lostReason     String?
  creditApp      Boolean   @default(false)
  segment        Segment   @default(COLD)
  language       Language  @default(EN)
  score          Int       @default(0)
  daysOld        Int?
  optedOut       Boolean   @default(false)
  tags           String[]
  importedYear   Int?
  lastContacted  DateTime?
  dealerCreatedAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  touches       Touch[]
  conversations Conversation[]
  dncEntries    DncList[]

  @@index([segment])
  @@index([optedOut])
  @@index([status])
  @@index([creditApp])
  @@index([importedYear])
  @@map("leads")
}

model Campaign {
  id          String         @id @default(uuid())
  name        String
  description String?
  segments    Segment[]
  channels    Channel[]
  status      CampaignStatus @default(draft)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  touches Touch[]

  @@map("campaigns")
}

model Touch {
  id          String      @id @default(uuid())
  leadId      String
  campaignId  String
  channel     Channel
  status      TouchStatus @default(pending)
  content     String?
  scheduledAt DateTime?
  sentAt      DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  lead     Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  events   TouchEvent[]

  @@index([leadId])
  @@index([campaignId])
  @@index([status])
  @@index([scheduledAt])
  @@map("touches")
}

model TouchEvent {
  id        String   @id @default(uuid())
  touchId   String
  eventType String
  payload   Json?
  createdAt DateTime @default(now())

  touch Touch @relation(fields: [touchId], references: [id], onDelete: Cascade)

  @@index([touchId])
  @@index([eventType])
  @@map("touch_events")
}

model Conversation {
  id        String             @id @default(uuid())
  leadId    String
  channel   Channel
  status    ConversationStatus @default(ai)
  messages  Json               @default("[]")
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([status])
  @@map("conversations")
}

model DncList {
  id        String   @id @default(uuid())
  leadId    String
  reason    String?
  createdAt DateTime @default(now())

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@map("dnc_list")
}

model AuditLog {
  id         String   @id @default(uuid())
  userId     String?
  action     String
  entityType String
  entityId   String
  payload    Json?
  createdAt  DateTime @default(now())

  @@index([entityType, entityId])
  @@index([createdAt])
  @@map("audit_logs")
}
